% to use non-standard font
\usepackage{fontspec}

% to ensure that beamer does not meddle with the fonts we use
\usefonttheme{professionalfonts}

% our main font
\usefonttheme{serif} % default family is serif
\setmainfont{Lato}
% \setmainfont{Liberation Serif}

\setbeamerfont{title}{family=\rmfamily, series=\bfseries, size=\LARGE}
\setbeamerfont{subtitle}{family=\rmfamily, series=\mdseries, size=\large}
\setbeamerfont{date}{family=\rmfamily, series=\mdseries, size=\large}
\setbeamerfont{institute}{family=\rmfamily, series=\mdseries, size=\normalsize}

\setbeamerfont{frametitle}{family=\rmfamily, series=\bfseries, size=\Large}
\setbeamerfont{framesubtitle}{family=\rmfamily, series=\mdseries, size=\large}
\setbeamerfont{item}{family=\rmfamily, series=\mdseries, size=\small}
